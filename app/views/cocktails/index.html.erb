<h1> Cocktails</h1>

<ul class="list-inline d-flex">
  <% @cocktails.each do |cocktail| %>
  <div class="card bg-dark text-white">
  <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"class="card-img">
  <div class="card-img-overlay">
    <li class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail)%> </li>
     </div>
     </div>
  <% end %>
</ul>

<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
